{
  "name": "gene-tooltips",
  "version": "0.1.0",
  "description": "A framework-agnostic library for showing gene information as a tooltip",
  "keywords": [
    "genetics",
    "bioinformatics",
    "gene",
    "genomics"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattjmeier/gene-tooltips.git"
  },
  "main": "dist/gene-tooltip.cjs.js",
  "module": "dist/gene-tooltip.esm.js",
  "browser": "dist/gene-tooltip.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/gene-tooltip.esm.js",
      "require": "./dist/gene-tooltip.cjs.js"
    },
    "./dist/css/main.css": "./dist/css/main.css",
    "./dist/css/base.css": "./dist/css/base.css",
    "./dist/css/light.css": "./dist/css/light.css"
  },
  "license": "MIT",
  "author": "Matthew J. Meier",
  "type": "module",
  "scripts": {
    "// HOUSEKEEPING": "-------------------------------------------------",
    "clean": "rimraf dist",
    "// DEVELOPMENT": "-------------------------------------------------",
    "dev": "npm run build && npm-run-all --parallel watch:*",
    "watch:js": "npm-run-all --parallel watch:js:*",
    "watch:js:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/gene-tooltip.cjs.js --minify --watch --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "watch:js:esm": "esbuild src/index.ts --bundle --platform=browser --format=esm --outfile=dist/gene-tooltip.esm.js --minify --watch --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "watch:js:umd": "esbuild src/index.ts --bundle --global-name=GeneTooltip --format=iife --outfile=dist/gene-tooltip.umd.js --footer:js=\"window.GeneTooltip = window.GeneTooltip.default\" --minify --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "watch:css": "esbuild src/css/*.css --bundle --outdir=dist/css --watch",
    "// PRODUCTION & DECLARATIONS": "---------------------------",
    "build": "npm run clean && npm-run-all build:js build:css  && tsc --emitDeclarationOnly",
    "build:js": "npm-run-all build:js:*",
    "build:js:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/gene-tooltip.cjs.js --minify --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "build:js:esm": "esbuild src/index.ts --bundle --platform=browser --format=esm --outfile=dist/gene-tooltip.esm.js --minify --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "build:js:umd": "esbuild src/index.ts --bundle --global-name=GeneTooltip --format=iife --outfile=dist/gene-tooltip.umd.js --footer:js=\"window.GeneTooltip = window.GeneTooltip.default\" --minify --external:ideogram --loader:.svg=text --loader:.webp=dataurl",
    "build:css": "esbuild src/css/*.css --bundle --outdir=dist/css --minify",
    "// DOCS & TESTING": "---------------------------------------------",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.14.12",
    "@types/tippy.js": "^6.0.0",
    "cpx": "^1.5.0",
    "d3": "^7.9.0",
    "esbuild": "^0.23.0",
    "glob": "^11.0.3",
    "ideogram": "^1.53.0",
    "jsdom": "^24.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tippy.js": "^6.3.7",
    "typescript": "^5.5.4",
    "vitepress": "^1.2.3",
    "vitest": "^2.0.4"
  },
  "peerDependencies": {
    "d3": "^7.0.0",
    "ideogram": "^1.53.0"
  },
  "peerDependenciesMeta": {
    "d3": {
      "optional": true
    },
    "ideogram": {
      "optional": true
    }
  }
}